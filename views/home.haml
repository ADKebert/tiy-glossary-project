- content_for :title do
  Iron Yardicon

%ul
  %div.banner
    %h2 Recent Additions

  -@recent_terms.each do |term|
    %li.list_a_term
      %p
        %a{href: "/terms/#{term.id}"}= "#{term.name}:"
        = term.definition
      %p
        = "Author: #{term.author}"
      %div.web_links_show
        %p
          External Resources:
        %ul
          - term.web_links.each do |link|
            %li
              %a{ href: "#{link.url}"}
                = link.description
